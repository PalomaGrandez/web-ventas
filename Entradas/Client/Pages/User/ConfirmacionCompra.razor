@page "/confirmacion-compra"
@inject NavigationManager NavigationManager

<PageTitle>Pedido Realizado</PageTitle>
<div style="height:20px" />

<MudContainer MaxWidth="MaxWidth.Large">
    <MudGrid Justify="Justify.Center">
        <MudItem lg="12">
            <MudCard Elevation="3">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h4" Align="Align.Center" Style="font-weight: 700; font-size: 1.6rem;">
                            Pedido N°2023-08-000001 Realizado exitosamente
                        </MudText>

                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid Justify="Justify.Center">
                        <MudItem lg="12">
                            <MudText Typo="Typo.body1" Align="Align.Center" Style="margin-left: 55px; margin-right: 55px;">
                                Realice su pago con Yape y envíe el comprobante a soporte@fabrica.pe con el asunto: Pago Pedido N° xxxx-xx-xxxxxx. Tras validar el pago, coordinaremos el envío. Verá sus productos en 'Mis Productos'.
                            </MudText>
                        </MudItem>
                        <MudItem lg="12">
                            <div class="d-flex justify-center">
                                <MudImage Height="300"  ObjectPosition="ObjectPosition.Center" Src="pago/cod_aprobacion.png" Class="rounded-lg" ObjectFit="ObjectFit.Contain" Fluid="true" Style="max-height:500px" />
                            </div>
                        </MudItem>
                        <MudItem>
                            <MudGrid AlignItems="AlignItems.Center" Style="margin-bottom:10px">
                                <MudItem Style="margin-top:20px"> 
                                    <MudImage Src="icons/mago.png" Style="height: 50px; width: 50px; margin-right: 8px;" />
                                </MudItem>
                                <MudItem Style="margin-top:30px">
                                    <MudText Typo="Typo.h5" Style="font-weight:600;" Class="tipo" Align="Align.Center">Gracias por su compra!</MudText>
                                </MudItem>
                            </MudGrid>
                        </MudItem>

                    </MudGrid>
                </MudCardContent>

                <MudCardActions>
                    <MudGrid Justify="Justify.Center">
                        <MudItem lg="12" Class="d-flex justify-center" Style="margin-bottom:20px">
                            <MudButton Size="Size.Large" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Home" Color="Color.Success" OnClick="Inicio">
                                Aceptar
                            </MudButton>
                        </MudItem>
                    </MudGrid>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private void Inicio()
    {
        NavigationManager.NavigateTo("/");
    }
}
